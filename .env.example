# StandardBounties Environment Configuration
# Copy this file to .env and fill in your values

# Network Configuration
NETWORK=sepolia

# API Keys
INFURA_API_KEY=your_infura_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
ALCHEMY_API_KEY=your_alchemy_api_key_here
FORTA_KEY_ID=your_forta_key_id_here
FORTA_API_KEY=your_forta_api_key_here

# Wallet Configuration (use either PRIVATE_KEY or MNEMONIC)
PRIVATE_KEY=your_private_key_here
# MNEMONIC=your_twelve_or_twentyfour_word_mnemonic_here

# Optional Configuration
MONITOR_DURATION=3600000

# Docker Configuration
NODE_ENV=development